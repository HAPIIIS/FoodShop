<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eclipse"
    app:tint="@color/white"
    tools:context=".PilihWarungActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, "
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12pt"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tes"
            android:textColor="@color/white"
            android:textSize="12pt"
            android:fontFamily="@font/montserrat_bold"/>
        <ImageView
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logout"
            android:layout_marginStart="20dp"
            app:tint="@color/white"/>

    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pilih Menu"
        android:textSize="18pt"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#FFFFFF" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/nasiuduk"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Uduk"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/seblak"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seblak"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/nasdang"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Padang"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ayambakar"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayam Bakar"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bubur"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubur"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/pecel"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pecel"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/text_color"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp" />
                </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nasiuduk"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Uduk"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12pt"
            android:textColor="@color/text_color"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp7,000"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12pt"
            android:textColor="@color/palet1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/palet1"
            android:src="@drawable/minus"
            app:tint="@color/white"
            app:fabCustomSize="50dp"
            app:maxImageSize="20dp"
            android:elevation="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_color"
            android:textSize="15pt"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tambah"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/palet1"
            android:src="@drawable/plus"
            app:tint="@color/white"
            app:fabCustomSize="50dp"
            app:maxImageSize="20dp"
            android:elevation="0dp"
            android:layout_marginEnd="50dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:backgroundTint="@color/palet1"
            android:background="@drawable/rounded_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>